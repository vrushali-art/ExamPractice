@model SynechronEventsPortal.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<h2>Details of- @Model.EmployeeName</h2>

<table>
    <tbody>
        <tr>
            <th>Employee Id</th>
            <td>@Model.EmployeeId</td>
        </tr>
        <tr>
            <th>Employee Name</th>
            <td>@Model.EmployeeName</td>
        </tr>
        <tr>
            <th>Employee Country</th>
            <td>@Model.Country</td>
        </tr>
        <tr>
            <th>Employee City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Employee Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Employee Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Employee Phone</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>Employee Skillsets</th>
            <td>@Model.Skillsets</td>
        </tr>
        <tr>
            <th>Employee Avatar</th>
            <td>
                <img src="@Url.Content(Model.Avatar)" alt="@Model.EmployeeName" />
            </td>
        </tr>
        <tr>
            <th>Employee Zipcode</th>
            <td>@Model.Zipcode</td>
        </tr>

    </tbody>
</table>

