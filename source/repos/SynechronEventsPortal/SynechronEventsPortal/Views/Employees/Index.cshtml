@using SynechronEventsPortal.Models
@model List<Employee>

@{
    ViewBag.Title = "Employee List";
}

@if(Model.Count>0)
{

<h2>@ViewBag.PageTitle</h2>
<hr />
<h6>@ViewBag.PageSubTitle</h6>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>City</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Show Details</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Employee employee in Model)
        {
            <tr>
                <td>@employee.EmployeeName</td>
                <td>@employee.City</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>
                    @Html.ActionLink("Show Details", "Details", new { id = employee.EmployeeId }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
}
else{
    <h1>Employee Record not found!!</h1>
}

